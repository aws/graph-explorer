{
  "extends": ["../../tsconfig.base.json"],
  "compilerOptions": {
    /* Language and Environment */
    "composite": true,
    "target": "ES2024",
    "lib": ["ES2024"],
    "types": ["vitest/globals"],

    /* Modules */
    "module": "nodenext",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,

    /* Paths */
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../../shared/src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "../shared" }, { "path": "./tsconfig.build.json" }]
}
