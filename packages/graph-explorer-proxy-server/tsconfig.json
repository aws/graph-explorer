{
  "extends": ["../../tsconfig.base.json"],
  "compilerOptions": {
    /* Language and Environment */
    "lib": ["ESNext"],
    "types": ["node", "vitest/globals"],

    /* Modules */
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,

    /* Paths */
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../../shared/src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "../shared" }, { "path": "./tsconfig.build.json" }]
}
