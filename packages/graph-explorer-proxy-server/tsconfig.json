{
  "extends": ["../../tsconfig.base.json"],
  "compilerOptions": {
    /* Language and Environment */
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2023"],
    "types": ["vitest/globals"],

    /* Modules */
    "module": "node16",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Paths */
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.build.json" }]
}
