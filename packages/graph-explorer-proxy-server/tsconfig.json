{
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "compilerOptions": {
    /* Modules */
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "module": "nodenext",
    "target": "es2022",
    "moduleResolution": "node16",
    "esModuleInterop": true,

    /* Type Resolution */
    "types": ["node", "vitest/globals"],
    "skipLibCheck": true,

    /* Paths */
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../../shared/src/*"]
    }
  }
}
